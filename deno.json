	"tasks": {
		"start": "deno run --allow-read --allow-net --allow-env --allow-run=\"komac\" ./src/main.ts",
		"start-dev": "deno run --allow-read --allow-net --allow-env --env-file=\"./.env\" --allow-run=\"komac\" ./src/main.ts",
		"pkg-test": "deno run --allow-read --allow-net --allow-env --env-file=\"./.env\" --allow-run=\"komac\" ./src/test.ts"
