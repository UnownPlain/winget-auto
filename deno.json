	"fmt": {
		"useTabs": true,
		"singleQuote": true
	},
	"imports": {
		"@std/path": "jsr:@std/path@^1.0.8",
		"octokit": "npm:octokit@^4.1.3",
		"zod": "npm:zod@^3.24.3"
	}
}
